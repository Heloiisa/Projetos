@{
    ViewData["Title"] = "Importação de certificado digital";
}

<section id="xmlimport" class="hero is-light is-fullheight">
    <navbarinternal></navbarinternal>
    <div class="hero-body">
        <div class="container has-text-centered">
            <h2 class="subtitle">Selecione o arquivo</h2>
            
            <div class="file has-name is-centered mt2">
                <label class="file-label">
                    <input id="file" class="file-input" type="file" name="resume">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fa fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Selecionar arquivo…
                        </span>
                    </span>
                    <span id="file-name" class="file-name">
                        exemplo.xml
                    </span>
                </label>
            </div>

            <a class="button is-info is-normal mt3">Enviar</a>
        </div>
    </div>
</section>